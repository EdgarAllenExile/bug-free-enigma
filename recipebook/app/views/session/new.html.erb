<h1>Login</h1>

<% if flash[:error].present? %>
    <h2><%= flash[:error] %></h2>
<% end %>
<%= form_tag login_path do %>
<br>
    <%= label_tag :email, nil, :class => 'form-label label_white' %>
    <%= email_field_tag :email, nil, :class => 'form-control' %>
 <br>
    <%= label_tag :password, nil, :class => 'form-label label_white' %>
    <%= password_field_tag :password, nil, :class => 'form-control ' %>
 <br>
    <%= submit_tag "Sign in", :class => 'btn btn-primary btn-lg' %>
<% end %>